@model List<User>
@section Styles {
    <link rel="stylesheet" href="~/css/userList.css" asp-append-version="true" />
}

<h2 class="mb-4">Kullanıcı Listesi</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        // 3 saniye sonra otomatik kaybolma
        setTimeout(function () {
            var alert = document.getElementById('success-alert');
            if (alert) {
                // Bootstrap alert sınıfını kullanarak kapat
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 3000);
    </script>
}

<a class="btn btn-success mb-3 shadow" href="/User/Create"> + Kullanıcı Ekle</a>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle border shadow-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">Resim</th>
                <th scope="col">İsim</th>
                <th scope="col">Email</th>
                <th scope="col" style="width: 150px;">İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <img src="@user.ProfileImagePath" width="60" height="60" class="rounded-circle object-fit-cover border border-secondary" alt="@user.Name Profil Resmi" /> @* height ve object-fit eklendi *@
                    </td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            <a class="btn btn-sm btn-warning flex-fill" href="/User/Edit/@user.Id">Düzenle</a>
                            <a class="btn btn-sm btn-danger flex-fill" href="/User/Delete/@user.Id">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>